{
	"name": "Startup Cookie Destroyer",
	"version": "1.0.2",
	"manifest_version": 2,
	"description": "Remove unwanted cookies and site data on startup.",
	"background": {
		"scripts": ["/js/background.js"],
		"persistent": false
	},
	"icons": {
		"128": "/img/icon128.png"
	},
	"browser_action": {
		"name": "Clear cookies and site data."
	},
	"options_ui": {
        "page": "/html/options.html",
        "chrome_style": true,
        "open_in_tab": false
    },
	"permissions": [
		"browsingData",
		"storage",
		"cookies",
		"http://*/*",
		"https://*/*"
	]
}
